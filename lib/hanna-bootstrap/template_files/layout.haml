!!! 5
%html{ :lang => "en" }
  %head
    %meta{:charset =>"utf-8"}
    %title #{ values[:title] }#{ ' - ' + @options.title if @options.title }
    %meta{:name =>'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1'}

    - values[:stylesheets].each do |f|
      %link{ :rel => "stylesheet", :href => f, :type => "text/css", :media => "screen" }
    - values[:javascripts].each do |f|
      %script{ :type => 'text/javascript', :src => f }

  %body{ :class => values[:classmod] ? 'class' : 'file' }
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{ data: { toggle: 'collapse', target: '.nav-collapse' } }
            - 3.times do
              %span.icon-bar
          - if @options.title
            = link_to(@options.title, values[:mainpage], 'brand')

          .nav-collapse
            %ul.nav
              %li.dropdown
                %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' } }
                  Classes
                  %b.caret
                %ul.dropdown-menu{ role: 'menu' }
                  = render_class_tree values[:classes].select { |x| x.full_name !~ /::/ }, values[:path]
              %li.dropdown
                %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' } }
                  Files
                  %b.caret
                %ul.dropdown-menu{ role: 'menu' }
                  - values[:files].each do |file|
                    %li= link_to file.name, Pathname.new(file.path).relative_path_from(values[:path].dirname)

            %form.navbar-search.pull-right
              %input#search-query.search-query.span2{ type: 'text', placeholder: 'Search methods' }
              %ul.dropdown-menu#search-results{ 'role' => 'menu', 'aria-labelledby' => 'search-query' }

    #main
      .container#documentation
        = yield

    %footer
      .container
        %p
          Generated by
          = link_to "RDoc #{ RDoc::VERSION }", 'https://github.com/rdoc/rdoc'
          \.
        %p
          Generated with the
          = link_to "Hanna Bootstrap RDoc Generator #{RDoc::Generator::Bootstrap::VERSION}", 'http://github.com/ngs/hanna-bootstrap'
          \.
